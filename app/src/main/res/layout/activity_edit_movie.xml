<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".EditMovieActivity" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
    />

    <EditText
            android:id="@+id/editNameOfMovie"
            android:hint="Enter name of movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
    />

    <EditText
            android:id="@+id/editDescription"
            android:hint="Enter a short description of the movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
    />

    <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editRadioGroupLanguage">

        <RadioButton
                android:id="@+id/editRadioButtonEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
        />

        <RadioButton
                android:id="@+id/editRadioButtonChinese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese"
        />

        <RadioButton
                android:id="@+id/editRadioButtonMalay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Malay"
        />

        <RadioButton
                android:id="@+id/editRadioButtonTamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamil"
        />
    </RadioGroup>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Release date"
    />
    <EditText
            android:id="@+id/editReleaseDate"
            android:hint="Enter release date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
    />

    <CheckBox
            android:id="@+id/editCheckBoxSuitable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not suitable for all audience"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

        <CheckBox
                android:id="@+id/editCheckBoxViolence"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Violence"
                android:visibility="invisible"
        />

        <CheckBox
                android:id="@+id/editCheckBoxLanguageUsed"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Language used"
                android:visibility="invisible"
        />
    </LinearLayout>


</LinearLayout>